@model Theater.Application.Modules.HallModule.Commands.HallAddCommand.HallAddRequest

@{
    ViewBag.Title = "Create Hall";
}

<h2>Create Hall</h2>

<form asp-action="Create" method="post" class="form-horizontal" id="hallForm">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Capacity" class="control-label"></label>
        <input asp-for="Capacity" class="form-control" type="number" min="1" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section addjs {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#hallForm').validate({
                rules: {
                    Name: {
                        required: true
                    },
                    Capacity: {
                        required: true,
                        min: 1
                    }
                },
                messages: {
                    Name: {
                        required: "Please enter the hall name"
                    },
                    Capacity: {
                        required: "Please enter the hall capacity",
                        min: "Capacity must be at least 1"
                    }
                },
                errorClass: "text-danger",
                validClass: "is-valid",
                errorElement: "span"
            });
        });
    </script>
}
