@model Theater.Application.Modules.PosterModule.Commands.PosterAddCommand.PosterAddRequest

@{
    ViewBag.Title = "Create Poster";
}

<h2>Create Poster</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GenreId" class="control-label">Genre</label>
        <select asp-for="GenreId" class="form-control">
            <option value="">Select Genre</option>
            @foreach (var genre in ViewBag.Genres)
            {
                <option value="@genre.Id">@genre.Name</option>
            }
        </select>
        <span asp-validation-for="GenreId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Duration" class="control-label"></label>
        <input asp-for="Duration" class="form-control" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Age" class="control-label"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image" class="control-label">Image</label>
        <input asp-for="Image" id="cover-image" type="file" accept="image/png, image/jpeg, image/gif" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <h3>Roles</h3>
    <div id="roles-container">
        <div class="form-group role-entry">
            <label>Role Name</label>
            <input name="Roles[0].RoleName" class="form-control" />
            <label>Actor</label>
            <select name="Roles[0].ActorId" class="form-control">
                <option value="">Select Actor</option>
                @foreach (var actor in ViewBag.Actors)
                {
                    <option value="@actor.Id">@actor.FullName</option>
                }
                @* Closing the foreach block *@
                }
            </select>
        </div>
    </div>
    <button type="button" id="add-role" class="btn btn-secondary">Add Role</button>

    <h3>Show Dates</h3>
    <div id="showdates-container">
        <div class="form-group showdate-entry">
            <label>Date</label>
            <input name="ShowDates[0].Date" type="datetime-local" class="form-control" />
            <label>Hall</label>
            <select name="ShowDates[0].HallId" class="form-control">
                <option value="">Select Hall</option>
                @foreach (var hall in ViewBag.Halls)
                {
                    <option value="@hall.Id">@hall.Name</option>
                }
                @* Closing the foreach block *@
                }
            </select>
        </div>
    </div>
    <button type="button" id="add-showdate" class="btn btn-secondary">Add Show Date</button>

    <div class="form-group mt-3">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a href="@Url.Action("Index", "Poster")" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section addcss {
    <link rel="stylesheet" href="~/lib/single-image-chooser/single-image-chooser.css" />
}

@section addjs {
    <script src="~/lib/single-image-chooser/single-image-chooser.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#cover-image').singleImageChooser();

            var roleIndex = 1;
            var showdateIndex = 1;

            $('#add-role').click(function () {
                var roleHtml = `<div class="form-group role-entry">
                                            <label>Role Name</label>
                                            <input name="Roles[${roleIndex}].RoleName" class="form-control" />
                                            <label>Actor</label>
                                            <select name="Roles[${roleIndex}].ActorId" class="form-control">
                                                <option value="">Select Actor</option>
        @foreach (var actor in ViewBag.Actors)
        {
                                                        <option value="@actor.Id">@actor.FullName</option>
        }
                                                }
                                            </select>
                                        </div>`;
                $('#roles-container').append(roleHtml);
                roleIndex++;
            });

            $('#add-showdate').click(function () {
                var showdateHtml = `<div class="form-group showdate-entry">
                                                <label>Date</label>
                                                <input name="ShowDates[${showdateIndex}].Date" type="datetime-local" class="form-control" />
                                                <label>Hall</label>
                                                <select name="ShowDates[${showdateIndex}].HallId" class="form-control">
                                                    <option value="">Select Hall</option>
        @foreach (var hall in ViewBag.Halls)
        {
                                                            <option value="@hall.Id">@hall.Name</option>
        }
                                                    }
                                                </select>
                                            </div>`;
                $('#showdates-container').append(showdateHtml);
                showdateIndex++;
            });
        });
    </script>
}
