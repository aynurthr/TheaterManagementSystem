@model Theater.Application.Modules.NewsModule.Commands.NewsAddCommand.NewsAddRequest

@{
    ViewData["Title"] = "Create News";
}

<h2>Create News</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date" class="control-label"></label>
        <input asp-for="Date" class="form-control" type="datetime-local" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control" id="body-editor"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
   
    <div class="form-group d-flex justify-content-end">
        <input asp-for="Image" id="cover-image" class="d-none" type="file" accept="image/png, image/gif, image/jpeg" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a href="@Url.Action("Index", "News")" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section addcss {
    <link rel="stylesheet" href="~/lib/single-image-chooser/single-image-chooser.css" />
}

@section addjs {
    <script src="~/lib/ckeditor5/ckeditor.min.js"></script>
    <script src="~/lib/single-image-chooser/single-image-chooser.js"></script>
    <script>
        $(document).ready(function () {

            $('#cover-image').singleImageChooser();

            ClassicEditor
                .create(document.querySelector('#body-editor'))
                .then(editor => { })
                .catch(error => { console.error(error); });

        });
    </script>
}
