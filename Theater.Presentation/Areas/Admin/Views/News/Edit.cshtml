@using Theater.Application.Modules.NewsModule.Queries.NewsGetByIdQuery
@model NewsGetByIdRequestDto

@{
    ViewData["Title"] = "Edit";
}

<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Edit News</h4>
                    <span>Edit the details of the news item.</span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="../index.html"> <i class="feather icon-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="#!">News</a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="#!">Edit</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="page-body">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h5>Edit News Item</h5>
                    <span>Edit the fields below to update the news item.</span>

                    <div class="card-header-right">
                        <i class="icofont icofont-spinner-alt-5"></i>
                    </div>
                </div>
                <div class="card-block">
                    <h4 class="sub-title">News Details</h4>
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div class="form-row">
                            <div class="col-7">
                                <div class="form-group">
                                    <label class="control-label" asp-for="Title"></label>
                                    <input type="text" class="form-control" asp-for="Title">
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label" asp-for="PublishedAt"></label>
                                    <input asp-for="PublishedAt" type="datetime-local" class="form-control" />
                                    <span asp-validation-for="PublishedAt" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label" asp-for="Description"></label>
                                    <textarea class="form-control" asp-for="Description" id="body-editor"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-5">
                                <div class="form-group d-flex justify-content-end">
                                    <input name="Image" id="cover-image" type="file" class="d-none" data-image="@Model.ImageUrl" accept="image/png, image/gif, image/jpeg" />
                                </div>
                            </div>
                        </div>

                        <div class="form-group text-right m-0">
                            <input type="hidden" class="form-control" asp-for="Id">
                            <a class="btn btn-sm btn-primary" asp-action="index">Cancel</a>
                            <button class="btn btn-sm btn-success">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section addcss {
    <link rel="stylesheet" href="~/lib/single-image-chooser/single-image-chooser.css" />
}

@section addjs {
    <script src="~/lib/ckeditor5/ckeditor.min.js"></script>
    <script src="~/lib/single-image-chooser/single-image-chooser.js"></script>
    <script>
        $(document).ready(function () {

            $('#cover-image').singleImageChooser();

            ClassicEditor
                .create(document.querySelector('#body-editor'))
                .then(editor => { })
                .catch(error => { console.error(error); });

        });
    </script>
}
