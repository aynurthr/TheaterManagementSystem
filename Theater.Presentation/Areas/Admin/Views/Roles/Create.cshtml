@model Theater.Domain.Models.Entities.Membership.AppRole

@{
    ViewData["Title"] = "Create Role";
}

<h2>Create Role</h2>

<div class="row">
    <div class="col-md-6">
        <form id="createRoleForm" asp-action="Create">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" id="roleName" />
                <span asp-validation-for="Name" class="text-danger" id="nameError"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section addjs {
    @Html.Partial("_ValidationScriptsPartial")
}

