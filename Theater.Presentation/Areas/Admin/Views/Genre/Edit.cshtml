@using Theater.Application.Modules.GenreModule.Queries
@model GenreRequestDto

@{
    ViewData["Title"] = "Edit Genre";
}

<div class="page-body">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h5>Edit Genre</h5>
                    <span>Edit the fields below to update the genre.</span>

                    <div class="card-header-right">
                        <i class="icofont icofont-spinner-alt-5"></i>
                    </div>
                </div>
                <div class="card-block p-3">
                    <h4 class="sub-title">Genre Details</h4>
                    <form asp-action="Edit" method="post">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="hidden" class="form-control" asp-for="Id">
                            <a class="btn btn-sm btn-primary" asp-action="Index">Cancel</a>
                            <button class="btn btn-sm btn-success">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
