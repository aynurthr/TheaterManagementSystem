@model Theater.Application.Modules.TeamMemberModule.Queries.TeamMemberRequestDto

@{
    ViewData["Title"] = "Team Member Details";
}

<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>@Model.Name</h4>
                    <span>Details of the selected team member</span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="@Url.Action("Index", "Home", new { area = "" })"> <i class="feather icon-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="@Url.Action("Index", "TeamMember", new { area = "Admin" })">Team Member Management</a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="#">Team Member Details</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="page-body">
    <div class="card">
        <div class="card-header">
            <h5>@Model.Name</h5>
        </div>
        <div class="card-block">
            <div class="row">
                <div class="col-md-6">
                    <img src="@Model.ImageUrl" alt="Team Member Image" class="img-fluid">
                </div>
                <div class="col-md-6">
                    <h5>Role</h5>
                    <p>@Model.Role</p>
                    <h5>Biography</h5>
                    <p>@Html.Raw(Model.Biography)</p>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-12">
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">
                        <i class="fa fa-pencil"></i> Edit
                    </a>
                    <a class="btn btn-secondary" asp-action="Index">
                        <i class="fa fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
