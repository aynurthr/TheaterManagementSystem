@model Theater.Application.Modules.TeamMemberModule.Commands.TeamMemberAddCommand.TeamMemberAddRequest

@{
    ViewData["Title"] = "Create Team Member";
}

<h2>Create Team Member</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Role" class="control-label"></label>
        <input asp-for="Role" class="form-control" />
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Biography" class="control-label"></label>
        <textarea asp-for="Biography" class="form-control"></textarea>
        <span asp-validation-for="Biography" class="text-danger"></span>
    </div>
    <div class="form-group d-flex justify-content-start">
        <input asp-for="Image" id="cover-image" class="d-none" type="file" accept="image/png, image/gif, image/jpeg" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a href="@Url.Action("Index", "TeamMember")" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section addcss {
    <link rel="stylesheet" href="~/lib/single-image-chooser/single-image-chooser.css" />
}

@section addjs {
    <script src="~/lib/single-image-chooser/single-image-chooser.js"></script>
    <script>
        $(document).ready(function () {

            $('#cover-image').singleImageChooser();

            ClassicEditor
                .create(document.querySelector('#body-editor'))
                .then(editor => { })
                .catch(error => { console.error(error); });

        });
    </script>
}
