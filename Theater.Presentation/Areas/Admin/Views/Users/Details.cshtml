@using Theater.Domain.Models.DTOs
@model AppUserDto

@{
    ViewData["Title"] = "User Details";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h1 class="card-title">User Details</h1>
        </div>
        <div class="card-body">
            <h4>User Information</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Username</dt>
                <dd class="col-sm-9">@Model.UserName</dd>

                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Surname</dt>
                <dd class="col-sm-9">@Model.Surname</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Email Confirmed</dt>
                <dd class="col-sm-9">
                    @if (Model.EmailConfirmed)
                    {
                        <span class="text-success">Yes</span>
                    }
                    else
                    {
                        <span class="text-danger">No</span>
                    }
                </dd>

                <dt class="col-sm-3">Phone Number</dt>
                <dd class="col-sm-9"> @if (string.IsNullOrEmpty(Model.Phone))
                    {
                        <span>N/A</span>
                    }
                    else
                    {
                        @Model.Phone
                    }</dd>

                <dt class="col-sm-3">Phone Confirmed</dt>
                <dd class="col-sm-9">
                    @if (Model.PhoneConfirmed)
                    {
                        <span class="text-success">Yes</span>
                    }
                    else
                    {
                        <span class="text-danger">No</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            <h4 class="card-title">Roles</h4>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Role Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model.Roles)
                    {
                        <tr>
                            <td>@role.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            <h4 class="card-title">Policies</h4>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Policy Name</th>
                        <th>Assigned</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var policy in Model.Policies)
                    {
                        <tr>
                            <td>@policy.Name</td>
                            <td>
                                @if (policy.Selected)
                                {
                                    <span class="text-success">Yes</span>
                                }
                                else
                                {
                                    <span class="text-danger">No</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
