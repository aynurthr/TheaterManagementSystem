
@{
    Layout = null;
    ViewData["Title"] = "Email Confirmed";
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link rel="stylesheet" href="~/assets/sass/main.css" />

<section class="confirmation-section">
    <div class="container">
        <div class="confirmation-message">
            <h1>Email Confirmation</h1>
            <p>@ViewBag.EmailConfirmed</p>
            <a href="@Url.Action("Signin", "Account")" class="btn btn-primary">Go to Login</a>
        </div>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
