@using Theater.Application.Modules.TeamMemberModule.Queries.TeamMemberGetAllQuery
@using Theater.Infrastructure.Extensions


@model IEnumerable<TeamMemberGetAllRequestDto>
@{
    ViewBag.Title = "Team";
    ViewBag.BodyId = "Team";
}

<section class="team-section">
    <div class="container">
        <div class="team-section__title">
            <a href="@Url.Action("Index", "Home")">
                <img src="~/assets/media/icons/arrow.svg" alt="" style="transform: scaleX(-1)" />
            </a>
            <h1>Theater Team</h1>
        </div>

        <div class="team-wrapper" id="team-wrapper">
            @foreach (var member in Model)
            {
                <div class="team-member">
                    <img src="@member.ImageUrl" alt="@member.Name" />
                    <div>
                        <h2>@member.Name</h2>
                        <h3>@member.Role</h3>
                        <p>@member.Biography</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
