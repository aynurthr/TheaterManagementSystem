@{
    ViewData["Title"] = "Hall Panorama";
    ViewBag.BodyId = "Halls";

}

<section class="hall-panorama">
    <div class="container">
        <div class="hall-panorama__title">
            <a href="@Url.Action("Index", "Home")">
                <img src="~/assets/media/icons/arrow.svg" alt="" style="transform: scaleX(-1)" />
